<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/cart_head_line"
    	android:layout_width="match_parent"
    	android:layout_height="48dp"
   		android:background="@drawable/pls_back_title" >
    
        <LinearLayout
	        android:id="@+id/linear_above_toHome"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:orientation="horizontal" >
	        
			<ImageView
				android:id="@+id/clearall_cart_pd"
				android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:scaleType="centerInside"
		        android:src="@drawable/cart_del"
		        android:padding="10dp" />
			
		</LinearLayout>
	    
        <TextView
            android:id="@+id/promote_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/pls_white"
            android:gravity="center"
            android:textSize="15.0sp"
            android:text="购物车" />
        
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/cart_address_line"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cart_head_line"
		android:padding="3dp">
        
        <LinearLayout
            android:id="@+id/line_one"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
			
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:padding="4dp"
	                android:textSize="13.0sp"
	                android:textStyle="bold"
	                android:text="送至:" />
	            
	            <TextView
	                android:id="@+id/my_cart_consignee"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="13.0sp"
		            android:textStyle="bold"/>
	            
	            <TextView
	                android:id="@+id/my_cart_mobile"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="4"
		            android:textSize="13.0sp"
		            android:textStyle="bold"
		            android:paddingLeft="4dp"/>
            
		</LinearLayout>
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/line_one"
	        android:orientation="horizontal">
			
            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="4dp"
				android:text="送至:"
				android:visibility="invisible"
				android:textSize="13.0sp" />
            
            <TextView
                android:id="@+id/my_cart_address"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="4"
		        android:textSize="13.0sp"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textStyle="bold"/>
            
		</LinearLayout>
	</RelativeLayout>
	
    <TextView
        android:id="@+id/cart_line"
        android:layout_width="match_parent"
        android:layout_below="@+id/cart_address_line"
        android:layout_height="5dp"
        android:background="@color/gray_bg"/>
	
    <LinearLayout
        android:id="@+id/cart_no_pd"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/cart_line"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:visibility="gone">

    	<ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/pls_cart_nopd" />

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25.0dip"
	        android:layout_marginRight="25.0dip"
	        android:layout_marginTop="25.0dip"
	        android:text="您的购物车是空的"
	        android:textColor="#ff888888"
	        android:textSize="19.0sp" />
	    
	    <Button   
		    android:id="@+id/go_index" 
		    android:text="去逛逛"
		    android:textColor="#ff888888"
		    android:layout_width="150dp"   
		    android:layout_height="wrap_content"   
		    android:background="@drawable/selector_grey_dark_corners_button"
		    android:layout_marginTop="20dp" />

	</LinearLayout>
    
    
    <ListView
        android:id="@+id/cart_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cart_line"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone"/>
    
    <RelativeLayout
        android:id="@+id/cart_foot"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@color/gray_bg"
		android:visibility="gone">
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
            
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="30"
	            android:orientation="horizontal" >
	            
	            <TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center"
					android:textColor="#ff5656"
					android:text="合计:￥"
					android:paddingLeft="4dp"
					android:textSize="15.0sp" />
	            
	            <TextView
	                android:id="@+id/cart_price_total"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center"
					android:textColor="#ff5656"
					android:text="1234.00"
					android:textSize="13.0sp" />
	            
	            <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="10dp"
		            android:orientation="horizontal" >
		            
	                <TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"/>
	                
	                <TextView
	                    android:id="@+id/cart_free_price"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/gray_bg_text"
	                    android:textSize="11.0sp" />
	                
		        </LinearLayout>
		        
	        </LinearLayout>
	        
	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:padding="4dp"
		        android:orientation="horizontal">
	            
	            <TextView
					android:id="@+id/cart_go_write"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="8dp"
					android:paddingBottom="8dp"
					android:paddingLeft="15dp"
					android:paddingRight="15dp"
					android:background="@drawable/selector_grey_pdcart_corners_button"
					android:gravity="center"
					android:textColor="#FFFFFF"
					android:textSize="11.0sp"
					android:text="结算" />
	            
	        </LinearLayout>
	        
		</LinearLayout>
		
	</RelativeLayout>
</RelativeLayout>