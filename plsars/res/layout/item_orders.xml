<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_list_txt_background"
    android:orientation="horizontal" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orders_status_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.96"
                android:gravity="center_vertical"
                android:text="退款成功"
                android:textSize="13sp"
                android:paddingLeft="11dp" />

            <TextView
                android:id="@+id/orders_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2015-06-23"
                android:textSize="13sp" 
                android:paddingRight="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ItemTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.asj.pls.view.MyListView   
		        android:id="@+id/pdListView"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:divider="@null"
		        android:fadingEdge="none"
		        android:listSelector="@android:color/transparent"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orders_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="实付款: ¥"
                android:textSize="13sp"
                android:paddingLeft="11dp"  />

            <TextView
                android:id="@+id/orders_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.56"
                android:gravity="center_vertical"
                android:text="51"
                android:textSize="13sp" />

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:gravity="center_vertical">
                
               	<Button
                    android:id="@+id/bttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_view_border"
                    android:text="取消"
                    android:textSize="13sp" />
				
			</LinearLayout>
			--> 
			
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>