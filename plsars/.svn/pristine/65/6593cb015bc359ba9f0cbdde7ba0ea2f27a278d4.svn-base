<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white">
	
	<LinearLayout 
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
	    <LinearLayout 
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <ImageView
				android:id="@+id/cart_pd_image" 
		        android:layout_width="65dp"
		        android:layout_height="65dp"
		        android:layout_margin="5dp"
		        android:background="@drawable/default_cart_pd"/>
	        
		</LinearLayout>
	        
		<LinearLayout
			android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        
		    <LinearLayout
				android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal">
	        	
		        <TextView
					android:id="@+id/cart_pd_name"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:padding="5dp"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:textSize="12.0sp"
			        android:layout_gravity="center"
			        android:text="早天下  泰国进口香蕉 约5斤天下  泰国进口香蕉 约5斤"/>
		        
		    </LinearLayout>
		    
		    
		    <LinearLayout
				android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal">
	        	
		        <LinearLayout
					android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_weight="3"
			        android:orientation="horizontal">
			        
		            <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF4500"
						android:textSize="15.0sp"
						android:layout_gravity="center_vertical"
						android:text="￥"/>
		            
		            <TextView
						android:id="@+id/cart_pd_price"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF4500"
						android:textSize="15.0sp"
						android:layout_gravity="center_vertical"
						android:text="1234.00"/>
							    
					<TextView
						android:id="@+id/cart_pd_unit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF4500"
						android:layout_gravity="center_vertical"
						android:textSize="15.0sp"
						android:text="/份"/>
					
			    </LinearLayout>    
				
				<LinearLayout
					android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_weight="2"
			        android:orientation="horizontal">
			        
				    <TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="2"
						android:layout_gravity="center_vertical"/>
				    
				    <RelativeLayout
						android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
				        android:layout_marginRight="5dp"
				        android:gravity="center_vertical"
				        android:orientation="horizontal">
				        
					    <ImageView
							android:id="@+id/minus"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_alignParentLeft="true"
							android:background="@drawable/shape_line"
							android:src="@drawable/cart_minus"/>
							    
						<TextView
							android:id="@+id/cart_pd_num"
							android:layout_width="wrap_content"
							android:layout_height="30dp"
							android:layout_toLeftOf="@+id/plus"
							android:layout_toRightOf="@+id/minus"
							android:textColor="@color/gray_bg_text"
							android:textSize="15.0sp"
							android:gravity="center"
							android:text="1"/>
							    
						<ImageView
							android:id="@+id/plus"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_alignParentRight="true"
							android:background="@drawable/shape_line"
							android:src="@drawable/cart_plus"/>
					    
					    
					</RelativeLayout>
				    
				    
		        </LinearLayout>
				
		    </LinearLayout>
		    
	    </LinearLayout>
			
	</LinearLayout>	
	    
	    
	<RelativeLayout
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true">
            
		<TextView
			android:id="@+id/promote_pd_tag"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	        
	</RelativeLayout>	
</RelativeLayout> 