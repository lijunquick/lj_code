<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:id="@+id/cate_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/cate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:text="冷冻日配"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_centerVertical="true"/>
            
            <Button
                android:id="@+id/cate_more"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/selector_grey_dark_corners_button"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:text="查看全部"
                android:textSize="12.0sp" />

        </LinearLayout>
        
        <com.asj.pls.view.MyGirdView
            android:id="@+id/cate_pd_girdview"
            android:layout_below="@+id/cate_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:numColumns="2"
            android:orientation="vertical"
            android:background="@color/gray_bg"/>
            
		
    </RelativeLayout>
</LinearLayout>